<image src="add.png" class="image" wx-if="{{identify}}" bindtap="addLecture"></image>

<view class="tittle">近期讲座</view>
<view wx:for='{{lectures}}' wx:key='key'>
  <view class="lecture">
  <image src="unjoin.png" class="image"></image>
  <text class="lectureTittle">{{item.title}}</text>
  <view>
    <text class="author">{{item.author}}\n\n</text>
  </view>
  <view>
    <button class="detail" bind:touchstart="onview" bind:touchend="outview" data-index="{{index}}">简介</button>
    <button class="join" bindtap="join">报名</button>
  </view>
  <view>
    <image src="time.png" class="imageDate"></image>
    <text class="date">{{item.date}}</text>
  </view>
  <view>
    <image src="pos.png" class="imagePos"></image>
    <text class="pos">{{item.address}}</text>
  </view>
</view>
<view>
    <text wx-if="{{item.isOnShowDetail}}" >{{item.introduction}}</text>
  </view>
</view>